<%- include('../includes/header') %>

<div class="container" style="min-height: 700px; margin-top: 80px;">
    <div class="row">
        <div class="col-md-10 offset-md-1 mt-4">
            <h4 class="text-center">List of All Student</h4>
            <br />
            <% if(result.length == 0){ %>
                <div class="alert alert-danger">No Data Found</div>
             <% }else{ %>
            
            <!-- <a href="/student/deleteall" class="btn btn-danger">Delete All</a> -->
            <a href="/student/deleteall" class="btn btn-danger">Delete All</a>
            <br />
            <br />
            <table class="table table-dark table-striped table-hover table-bordered">
                <tr>
                    <th>S.No.</th>
                    <th>Full Name</th>
                    <th>Fee</th>
                    <th>City</th>
                    <th>Detail</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% result.forEach((x, n)=>{ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td><%= x.fullname %></td>
                        <td><%= x.fee %></td>
                        <td><%= x.city %></td>
                        <td><a href="/student/detail/<%= x._id %>" class="btn btn-sm btn-primary">Detail</a></td>
                        <td><a href="/student/edit/<%= x._id %>" class="btn btn-sm btn-info">Edit</a></td>
                        <td><a href="/student/delete/<%= x._id %>" class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                <% }) %>
            </table>
            <% } %>
        </div>
    </div>

</div>
<%- include('../includes/footer') %>