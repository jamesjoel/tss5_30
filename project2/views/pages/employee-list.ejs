<%- include("../includes/header") %>
<div class="container my-4" style="min-height: 700px;">
    <div class="row">
        <div class="col-md-12">
            <% if(result.length == 0){ %>
                <div class="alert alert-danger">
                    No Record Found in Employee
                </div>
            <% }else{ %>
                <table class="table table-dark">
                    <tr>
                        <th>S.No.</th>
                        <th>Name</th>
                        <th>Salary</th>
                        <th>City</th>
                    </tr>
                    <% result.forEach((x, n)=>{ %>
                        <tr>
                            <td><%= n+1 %></td>
                            <td><%= x.name %></td>
                            <td><%= x.salary %></td>
                            <td><%= x.city %></td>
                        </tr>
                    <% }) %>
                </table>
            <% } %>
            
        </div>
    </div>
</div>
</body>
</html>