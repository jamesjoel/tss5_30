<%- include("../includes/header") %>
<div class="container" style="min-height: 700px;">
    <h2>Teacher Update Page</h2>
    <form action="/teacher/update/<%= result._id %>" method="post">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" value="<%= result.name %>" name="name" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Salary</label>
                <input type="text" value="<%= result.salary %>" name="salary" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Address</label>
                <textarea name="address" class="form-control"><%= result.address %></textarea>
            </div>
            <br />
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>
    </form>
    
</div>
<%- include("../includes/footer") %>