<%- include("../includes/header") %>
<div class="container" style="min-height: 700px;">
    <h2>Teacher Page</h2>
    <form action="/teacher" method="post">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" name="name" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Salary</label>
                <input type="text" name="salary" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Address</label>
                <textarea name="address" class="form-control"></textarea>
            </div>
            <br />
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>
    </form>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-dark">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Address</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% result.forEach((x, n)=>{ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td><%= x.name %></td>
                        <td><%= x.salary %></td>
                        <td><%= x.address %></td>
                        <td><a href="/teacher/edit/<%= x._id %>" class="btn btn-sm btn-info">Edit</a></td>
                        <td><a href="/teacher/delete/<%= x._id %>" class="btn btn-sm btn-danger">Delete</a></td>
                        
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>
<%- include("../includes/footer") %>